enum InvoiceStatus {
  DRAFT
  OPEN
  PAID
  VOID
  UNCOLLECTIBLE
}

model Invoice {
  id             String           @id @default(uuid())
  userId         String
  subscriptionId String
  number         String           @unique
  currency       String // ISO 4217, e.g., EUR
  amountSubtotal Int // in minor units (cents)
  amountTax      Int              @default(0)
  amountDiscount Int              @default(0)
  amountTotal    Int // in minor units (cents)
  periodStart    DateTime
  periodEnd      DateTime
  dueDate        DateTime?
  paidAt         DateTime?
  status         InvoiceStatus    @default(OPEN)
  pdfUrl         String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscription   UserSubscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  items          InvoiceItem[]
  payments       Payment[]

  @@index([userId])
  @@index([subscriptionId])
  @@index([status])
  @@map("invoices")
}

model InvoiceItem {
  id          String            @id @default(uuid())
  invoiceId   String
  planId      String?
  description String?
  quantity    Int               @default(1)
  unitAmount  Int // cents
  amount      Int // cents (quantity * unitAmount minus discounts)
  createdAt   DateTime          @default(now())
  invoice     Invoice           @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  plan        SubscriptionPlan? @relation(fields: [planId], references: [id])

  @@index([invoiceId])
  @@index([planId])
  @@map("invoice_items")
}

enum PaymentStatus {
  REQUIRES_PAYMENT_METHOD
  REQUIRES_CONFIRMATION
  SUCCEEDED
  FAILED
  REFUNDED
}

model Payment {
  id               String        @id @default(uuid())
  userId           String
  invoiceId        String
  currency         String
  amount           Int
  status           PaymentStatus @default(REQUIRES_PAYMENT_METHOD)
  provider         String // e.g., STRIPE
  providerChargeId String?
  receiptUrl       String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  user             User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  invoice          Invoice       @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([invoiceId])
  @@index([status])
  @@map("payments")
}

